<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Klicka.ConfigPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Klicka"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollView>
        <Grid
            MaxWidth="550"
            Padding="16"
            HorizontalAlignment="Stretch"
            RowDefinitions="Auto, Auto, Auto">
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,16"
                HorizontalAlignment="Stretch">
                <Border
                    MinHeight="46"
                    Padding="16,0,0,0"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="4 4 0 0">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B0;" />
                        <TextBlock Margin="12,0,0,0" Text="Input" />
                    </StackPanel>
                </Border>
                <Border
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    CornerRadius="0 0 4 4">
                    <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                        <ComboBox
                            x:Name="btnComboBox"
                            Header="Mouse Button"
                            SelectedIndex="0">
                            <x:String>Left</x:String>
                            <x:String>Right</x:String>
                            <x:String>Middle</x:String>
                        </ComboBox>
                        <RadioButtons
                            x:Name="locationChoice"
                            Margin="0,24,0,0"
                            Header="Click position"
                            SelectedIndex="0">
                            <RadioButton>
                                Use cursor position.
                            </RadioButton>
                            <RadioButton
                                Height="Auto"
                                Padding="8,0,0,0"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center">
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        x:Name="getCursorLocBtn"
                                        Margin="0,0,8,0"
                                        Click="getCursorLocBtn_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <FontIcon
                                                Margin="0,0,8,0"
                                                FontFamily="Segoe Fluent Icons"
                                                Glyph="&#xF272;" />
                                            <TextBlock Text="Get Position" />
                                        </StackPanel>
                                    </Button>
                                    <NumberBox
                                        x:Name="targetX"
                                        Margin="0,0,8,0"
                                        Value="0" />
                                    <NumberBox x:Name="targetY" Value="0" />
                                </StackPanel>
                            </RadioButton>
                        </RadioButtons>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Grid.Row="1" HorizontalAlignment="Stretch">
                <Border
                    MinHeight="46"
                    Padding="16,0,0,0"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="4 4 0 0">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <FontIcon
                            Margin="0,0,12,0"
                            FontFamily="Segoe Fluent Icons"
                            Glyph="&#xECC5;" />
                        <TextBlock Text="Timing" />
                    </StackPanel>
                </Border>
                <Border
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    CornerRadius="0 0 4 4">
                    <RadioButtons
                        x:Name="intervalChoice"
                        HorizontalAlignment="Left"
                        Header="Click Interval"
                        SelectedIndex="0">
                        <RadioButton x:Name="rb1">
                            <RelativePanel>
                                <NumberBox
                                    x:Name="intervalInputBox"
                                    Width="Auto"
                                    Header="Constant Interval"
                                    LargeChange="100"
                                    Minimum="0"
                                    SmallChange="10"
                                    SpinButtonPlacementMode="Compact"
                                    Value="100" />
                                <TextBlock
                                    Padding="8,0,0,8"
                                    RelativePanel.AlignBottomWith="intervalInputBox"
                                    RelativePanel.RightOf="intervalInputBox"
                                    Text="ms" />
                            </RelativePanel>
                        </RadioButton>
                        <RadioButton>
                            <RelativePanel>
                                <TextBlock
                                    x:Name="riTb0"
                                    Padding="0,0,8,8"
                                    Text="Random Interval Between" />
                                <NumberBox
                                    x:Name="randIntervalMinInputBox"
                                    Minimum="0"
                                    RelativePanel.AlignLeftWith="riTb0"
                                    RelativePanel.Below="riTb0"
                                    SmallChange="10"
                                    SpinButtonPlacementMode="Compact"
                                    Value="10" />
                                <TextBlock
                                    x:Name="riTb1"
                                    Padding="8,0,16,4"
                                    RelativePanel.AlignVerticalCenterWith="randIntervalMinInputBox"
                                    RelativePanel.RightOf="randIntervalMinInputBox"
                                    Text="ms" />
                                <NumberBox
                                    x:Name="randIntervalMaxInputBox"
                                    Minimum="1"
                                    RelativePanel.AlignVerticalCenterWith="riTb1"
                                    RelativePanel.RightOf="riTb1"
                                    SmallChange="10"
                                    SpinButtonPlacementMode="Compact"
                                    Value="100" />
                                <TextBlock
                                    Padding="8,0,0,4"
                                    RelativePanel.AlignVerticalCenterWith="randIntervalMaxInputBox"
                                    RelativePanel.RightOf="randIntervalMaxInputBox"
                                    Text="ms" />
                            </RelativePanel>
                        </RadioButton>
                    </RadioButtons>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollView>
</Page>
